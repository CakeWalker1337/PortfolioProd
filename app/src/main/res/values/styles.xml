<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegularText">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularText.Clickable" parent="RegularText">
        <item name="android:textColor">@color/clickable_text_color</item>
    </style>

    <style name="RegularText.Clickable.Size18" parent="RegularText.Clickable">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegularText.Size18" parent="RegularText">
        <item name="android:textSize">18sp</item>
    </style>
</resources>